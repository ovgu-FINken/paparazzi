<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="47" ground_alt="44" lat0="52 8 19" lon0="11 38 38" max_dist_from_home="250" name="Rotorcraft Basic (Enac)" security_height="1">
  <header>
#include "autopilot.h"
  </header>
  <waypoints>
    <waypoint name="FOLLOW" x="0.0" y="0.0"/>
    <waypoint name="ATTRECTION_POINT" x="0.0" y="0.0"/>
    <waypoint name="REPELL_POINT" x="0.0" y="0.0"/>
    <waypoint name="HOME" x="0.0" y="0.0" alt="47"/>
  </waypoints>
  <blocks>
    <block name="Wait GPS">
      <call_once fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 1)"/>
      <call_once fun="NavSetGroundReferenceHere()"/>
      <call_once fun="NavSetAltitudeReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="NavBlockTime() > 20"/>
    </block>
    <block name="Start Engine">
      <call_once fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="NavBlockTime() > 5"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 1.0" deroute="START"/>
      <call_once fun="NavSetWaypointHere(WP_HOME)"/>
      <stay vmode="climb" climb="nav_climb_vspeed" wp="HOME"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <stay wp="HOME"/>
    </block>
     <block name="START">
      <go wp="HOME" approaching_time="0"/>
      <deroute block="FOLLOWING"/>
    </block>
    <block name="FOLLOWING">
      <go wp="FOLLOW" approaching_time="0"/>
      <deroute block="FOLLOWING"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call_once fun="NavStartDetectGround()"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="HOME"/>
    </block>
    <block name="landed">
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
  </blocks>
</flight_plan>
